            <label for="cardName">Name</label>
            <input type="text" class="form-control" name="name" value="<%= card.name%>">
        </div>
        <div class="form-group">
            <label for="cardURL">Image</label>
            <input type="file" class="form-control" name="image" accept="image/*">
        </div>
        <div class="form-group">
            <label for="carddecs1">ฉายา</label>
            <input type="text" class="form-control" name="decs1" value="<%= card.decs1%>">
        </div>
        <div class="form-group">
            <label for="carddecs1">ค่าหัวล่าสุด</label>
            <input type="text" class="form-control" name="decs2" value="<%= card.decs2%>">
        </div>
        <button type="submit" class="btn btn-primary" style="float: right;">Confirm</button>
    </form>
</div>
