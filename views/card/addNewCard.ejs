<%- include("../partials/header") %>
<div class="container" style="width: 35%;margin: 25px auto;">
    <h2 style="text-align: center;">Create a new Bounty leaflet</h2>
    <form action="/BountyLeaflet" method="POST" enctype="multipart/form-data">
        <div class="form-group">
            <label for="cardName">Name</label>
            <input type="text" class="form-control" name="name" placeholder="ชื่อของคนในใบค่าหัว">
        </div>
        <div class="form-group">
            <label for="cardUpload">Image URL</label>
            <input type="file" class="form-control" name="image" accept="image/*">
        </div>
        <div class="form-group">
            <label for="carddecs1">ฉายา</label>
            <input type="text" class="form-control" name="decs1" placeholder="ฉายาของคนในรูป">
        </div>
        <div class="form-group">
            <label for="carddecs1">ค่าหัวล่าสุด</label>
            <input type="text" class="form-control" name="decs2" placeholder="ตัวอย่าง 150,000 เบรี่">
        </div>
        <button type="submit" class="btn btn-primary" style="float: right;">Submit</button>
    </form>
</div>
<%- include("../partials/footer") %>