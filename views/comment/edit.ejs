<%- include("../partials/header") %>
<div class="container" style="width: 35%;margin: 25px auto;">
    <h2 style="text-align: center;">Edit a comment</h2>
    <form action="/BountyLeaflet/<%= card_id%>/comment/<%= comment._id%>?_method=PUT" method="POST">
        <div class="form-group">
            <label for="commentText">comment</label>
            <input type="text" class="form-control" name="comment[text]" value="<%= comment.text%>">
        </div>
        <button type="submit" class="btn btn-primary" style="float: right;">Confirm</button>
    </form>
</div>
